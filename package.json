{
  "name": "codex-react-calendar",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "description": "A modern, lightweight, customizable React calendar component",
  "keywords": [
    "react",
    "calendar",
    "datepicker",
    "react-calendar",
    "typescript",
    "ui"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codex/react-calendar"
  },
  "homepage": "https://github.com/codex/react-calendar#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
